<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#FFFFFF"
    >

    <ImageView
        android:id="@+id/downloadImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/download_all_btn"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/altafseerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tafseerRadioButton"
        android:layout_toEndOf="@+id/tafseerRadioButton"
        android:layout_toStartOf="@+id/downloadImage"
        android:layout_toLeftOf="@+id/downloadImage"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="التفسير الميسر"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/describtionTafseer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/altafseerName"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/tafseerRadioButton"
        android:layout_toStartOf="@+id/downloadImage"
        android:layout_toLeftOf="@+id/downloadImage"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/tafseerRadioButton"
        android:textAlignment="textStart"
        android:text="القرطبي"
        android:textColor="@color/mainListBrown"

        />

    <RadioButton
        android:id="@+id/tafseerRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5sp"
        />

</RelativeLayout>