<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/mainListFirstImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/main_list_star" />

    <TextView
        android:id="@+id/mainListFirstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/mainListFirstImage"
        android:layout_toRightOf="@+id/mainListFirstImage"
        android:text="@string/athkarFromQuran"
        android:textColor="#000000"
        android:textSize="20sp" />


    <RelativeLayout
        android:id="@+id/firstRelative"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/mainListFirstText"
        android:layout_alignStart="@+id/mainListFirstText"
        android:layout_below="@+id/mainListFirstText"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/firstTwoLiftArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/main_list_first_item_right_arrow" />

        <TextView
            android:id="@+id/nightWerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/firstTwoLiftArrow"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/firstTwoLiftArrow"
            android:layout_toRightOf="@+id/firstTwoLiftArrow"
            android:text="@string/nightReading"
            android:textColor="#000000"
            android:textSize="20sp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondRelative"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignLeft="@id/mainListFirstText"
        android:layout_alignStart="@+id/mainListFirstText"
        android:layout_below="@+id/firstRelative"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">


        <ImageView
            android:id="@+id/twoLiftArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/main_list_first_item_right_arrow" />

        <TextView
            android:id="@+id/jumaaWerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/twoLiftArrow"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/twoLiftArrow"
            android:layout_toRightOf="@+id/twoLiftArrow"
            android:text="@string/fridayReading"
            android:textColor="#000000"
            android:textSize="20sp"

            />
    </RelativeLayout>
</RelativeLayout>