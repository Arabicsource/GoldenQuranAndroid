<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#FFFFFF"
    android:padding="8dp">

    <ImageView
        android:id="@+id/shakeImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/reader_abdelbaset"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/shakeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/PickShakeradioButton"
        android:layout_toEndOf="@+id/PickShakeradioButton"
        android:text="عبد الباسط"
        android:layout_toStartOf="@+id/shakeImage"
        android:layout_toLeftOf="@+id/shakeImage"
        android:textAlignment="textStart"
        android:gravity="start"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20sp"
        android:textColor="#000000"
        />



    <RadioButton
        android:id="@+id/PickShakeradioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />



</RelativeLayout>